[{
    "layer": "top",
    "position": "top",
    "height": 35,
    "spacing": 4,
    "margin-top": 5,
    "margin-bottom": 5,

    // Choose the order of the modules
    "modules-left": ["group/metrics"],
    "modules-center": ["hyprland/window"],
    "modules-right": ["tray", "pulseaudio", "backlight"],

    // Modules configuration
    "hyprland/window": {
        "format": "{title}",
        "separate-outputs": true,
        "icon": true,
    },

    "group/metrics": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 500,
            "transition-left-to-right": true,
        },
        "modules": [
            "image#metrics",
            "temperature",
            "cpu",
            "memory",
            "disk",
        ],
    }, 

    "image#metrics": {
        "path": "metrics.png",
        "size": 32,
    },

    "disk": {
        "interval": 30,
        "path": "/",
        "format": "{free} ",
        "unit": "GB",
    },

    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": " {name} {icon}",
        "format-icons": {
            "locked": "",
            "unlocked": ""
        }
    },

    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        }
    },

    "tray": {
        "icon-size": 20,
        "spacing": 10
    },

    "cpu": {
        "format": "{usage}% ",
        "tooltip": true
    },

    "memory": {
        "format": "{}% "
    },

    "temperature": {
        "thermal-zone": 5,
        // "hwmon-path": "/sys/devices/platform/thinkpad_hwmon/hwmon/hwmon5/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}°C {icon}",
        "format": "{temperatureC}°C ",
        "tooltip": true
    },

    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["", ""]
    },


    "battery#bat2": {
        "bat": "BAT2"
    },

    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}",
        "format-bluetooth-muted": "{icon} {format_source}",
        "format-muted": "{format_source}",
        "format-source": "",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol"
    },

    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 25,
        "format-icons": {
            "spotify": " ",
            "default": " "
        },
        "escape": true,
        "exec": "$HOME/.config/system_scripts/mediaplayer.py 2> /dev/null",
        "on-click": "playerctl play-pause"
    },

    // "custom/launcher":{
    //     "format": " ",
    //     "on-click": "rofi -show drun -theme ~/.config/rofi/sway/sway_config.rasi",
    //     "on-click-right": "killall rofi"
    // },
},

 {
     "layer": "top",
     "position": "bottom",
     "height": 35,
     "spacing": 4,
     "margin-top": 5,
     "margin-bottom": 10,

     // Choose the order of the modules
     "modules-left": ["clock"],
     "modules-center": ["hyprland/workspaces"],
     "modules-right": ["network", "battery"],

     // Modules configuration

     "hyprland/workspaces": {
         "format": "{icon}",
         "format-icons": {
             "1":"",
             "2": "",
             "3": "",
             "8": "",
             "10": ""
         }
     },

     "battery": {
         "states": {
             // "good": 95,
             "warning": 30,
             "critical": 15
         },
         "format": "{capacity}% {icon}",
         "format-charging": "{capacity}% ",
         "format-plugged": "{capacity}% ",
         "format-alt": "{time} {icon}",
         // "format-good": "", // An empty format will hide the module
         // "format-full": "",
         "format-icons": ["", "", "", "", ""]
     },

     "network": {
         // "interface": "wlp2*", // (Optional) To force the use of this interface
         "format-wifi": "{essid} ({signalStrength}%) ",
         "format-ethernet": "Connected  ",
         "tooltip-format": "{ifname} via {gwaddr} ",
         "format-linked": "{ifname} (No IP) ",
         "format-disconnected": "Disconnected ⚠",
         "format-alt": "{ifname}: {ipaddr}/{cidr}",
         "on-click-right": "bash ~/.config/rofi/wifi_menu/rofi_wifi_menu"
     },

     "clock": {
         // "timezone": "America/New_York",
         "interval": 1,
         "format": " {:%T}",
         // "tooltip-format": "<big>{:}</big>\n<tt><small>{calendar}</small></tt>",
         "format-alt": "{:%d-%m-%Y}",
         "tooltip-format": "<tt><small>{calendar}</small></tt>",
         "calendar": {
             "mode"          : "year",
             "mode-mon-col"  : 3,
             "weeks-pos"     : "right",
             "format": {
                 "months":     "<span color='#ffead3'><b>{}</b></span>",
                 "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                 "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                 "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                 "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
             }
         }
     },

 }
]
